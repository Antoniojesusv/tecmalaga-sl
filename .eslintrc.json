{
  "extends": "airbnb-base",

  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jasmine": true
  },

  "rules": {
    "no-plusplus": [0, {
      "allowForLoopAfterthoughts": true
    }],
    "wrap-iife": [2, "inside", {
      "functionPrototypeMethods": true
    }],
    "no-unused-vars": "warn",
    "func-names": ["error", "never"],
    "quotes": ["error", "single", {
      "allowTemplateLiterals": true
    }],
    "no-undef": "warn",
    "object-shorthand": [2, "consistent"],
    "no-underscore-dangle": ["error", {
      "allowAfterThis": true,
      "enforceInMethodNames": true,
      "allow": ["$this_", "_view", "context_", "_gui"]
    }]
  }

}
